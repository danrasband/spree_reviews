<% content_for :head do %>
  <%= stylesheet_link_tag 'reviews.css' %>
<% end %>
<div id="reviews">
  <%= render :partial => 'spree/shared/rating', :locals => {:product => @product, :review => 0} %>
  <% @product.reviews.approval_filter.each do |review| %>
    <%= render :partial => 'spree/shared/review', :locals => {:review => review} %>
  <% end %>

  <%= link_to t('write_your_own_review'), spree.new_product_review_path(@product), :class => "button" %>
</div>

